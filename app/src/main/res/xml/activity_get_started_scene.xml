<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintWidth_percent="0.8"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="304dp"
            android:layout_height="462dp"
            motion:layout_constraintBottom_toTopOf="@+id/guideline5"
            motion:layout_constraintHeight_percent="0.65"
            motion:layout_constraintTop_toTopOf="@+id/guideline4"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/imageView3" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:autoTransition="jumpToStart" />
</MotionScene>